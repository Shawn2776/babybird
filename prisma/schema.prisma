generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model BackTalk {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  content   String
  talk      Talk     @relation(fields: [talkId], references: [id])
  talkId    Int
  ownerId   Int
  tags      String
  isNSFW    Boolean
  is18Plus  Boolean

  @@index([ownerId])
  @@index([talkId])
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Dislike {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  ownerId   Int
  talk      Talk     @relation(fields: [talkId], references: [id])
  talkId    Int

  @@index([ownerId])
  @@index([talkId])
}

model Like {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  ownerId   Int
  talkId    Int
  talk      Talk     @relation(fields: [talkId], references: [id])

  @@index([ownerId])
  @@index([talkId])
}

model Role {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  name      String    @unique
  userId    String?
}

model Talk {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  text      String?
  image     String?
  video     String?
  owner User @relation(fields: [ownerId], references: [id])
  ownerId   Int
  tags      String?
  isNSFW    Boolean   @default(false)
  is18Plus  Boolean   @default(false)
  likes    Like[]    // One-to-many relation with Like
dislikes Dislike[] // One-to-many relation with Dislike
backTalks BackTalk[] // One-to-many relation with BackTalk
retalks Retalks[]

  @@index([ownerId])
}

model User {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime?
  email         String    @unique
  name          String
  profilePic    String?
  emailVerified Boolean
  roleId        Int
  username      String    @unique
  location      String?
  description   String?
  url           String?
  lang          String    @default("en")
  talks Talk[]
  retalks Retalks[]

  @@index([roleId])
}

model Retalks {
  id        Int    @id @default(autoincrement())
  talk      Talk   @relation(fields: [talkId], references: [id])
  talkId    Int
  user      User   @relation(fields: [userId], references: [id])
  userId    Int

  @@unique([talkId, userId], name: "retalks_user_talk_unique")
}

model TalksToCategories {
  A Int
  B Int

  @@unique([A, B], map: "_TalksToCategories_AB_unique")
  @@index([B], map: "_TalksToCategories_B_index")
  @@map("_TalksToCategories")
}

model UserFollowers {
  A Int
  B Int

  @@unique([A, B], map: "_UserFollowers_AB_unique")
  @@index([B], map: "_UserFollowers_B_index")
  @@map("_UserFollowers")
}

model UserFriends {
  A Int
  B Int

  @@unique([A, B], map: "_UserFriends_AB_unique")
  @@index([B], map: "_UserFriends_B_index")
  @@map("_UserFriends")
}
